{
    "tasks": [
        {
            "type": "shell",
            "label": "clang build active file",
            "command": "C:\\Program Files\\LLVM\\bin\\clang.exe",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${file}",
                "${workspaceFolder}\\bin\\mem.obj",
                "${workspaceFolder}\\bin\\cpu.obj",
                "-o",
                "${workspaceFolder}\\bin\\${fileBasenameNoExtension}.exe"
            ],
            "dependsOn": ["clang mem obj build", "clang cpu obj build"],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger.",
            
        },

        {
            "type": "cppbuild",
            "label": "clang mem obj build",
            "command": "C:\\Program Files\\LLVM\\bin\\clang.exe",
            "args": [
                "-c",
                "${workspaceFolder}\\src\\mem.c",
                "-o",
                "${workspaceFolder}\\bin\\mem.obj"
            ]
        },

        {
            "type": "cppbuild",
            "label": "clang cpu obj build",
            "command": "C:\\Program Files\\LLVM\\bin\\clang.exe",
            "args": [
                "-c",
                "${workspaceFolder}\\src\\cpu.c",
                "-o",
                "${workspaceFolder}\\bin\\cpu.obj",
            ]
        }
    ],
    "version": "2.0.0"
}